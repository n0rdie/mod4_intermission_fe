<h5><%= request.fullpath %></h5>
<h1><%= @input %></h1>
<% if @i == nil %>
    <h5><%= @news.count %> results</h5>
    <% for i in 0..9 do %>
        <% if @news[i] != nil %>
            <img src="<%= @news[i].image %>" alt="Image">
            <h2><%= link_to @news[i].headline, "#{request.fullpath}&i=#{i}" %></h2>
            <h3><%= @news[i].description %></h3>
            <h5>Published: <%= @news[i].datetime %></h5>
        <% end %>
    <% end %>
<% else %>
    <img src="<%= @news[@i].image %>" alt="Image">
    <h1><%= link_to @news[@i].headline, @news[@i].link %></h1>
    <h2>Source: <%= @news[@i].source %></h2>
    <h5>Published: <%= @news[@i].datetime %></h5>
    <h3><%= @news[@i].content %></h3>
<% end %>